<data>
    <record model="ir.ui.view" id="medical_practitioner_user_wizard_form_view">
        <field name="name">medical.practitioner.user.wizard.form</field>
        <field name="model">medical.practitioner.user.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Attendees">
                <group>
                    <field name="login"/>
                    <field name="email"/>
                    <field name="login_user_id"/>
                    <field name="practitioner_id" readonly="1" invisible="1"/>
                </group>
                <footer>
                    <button name="create_user" type="object"
                            string="Create" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>

            </form>
        </field>
    </record>

    <record id="action_medical_practitioner_user_create" model="ir.actions.act_window">
            <field name="name">Create user</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.practitioner.user.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

</data>
