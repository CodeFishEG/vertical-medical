<odoo>

	<template id="prescription_lines" name="Prescription Lines">
		<h3 class="page-header">
			Prescriptions
		</h3>
        <t t-if="not patients">
            <p>There are currently no prescriptions associated with your account.</p>
        </t>
        <t t-if="patients">
            <table class="table table-hover o_my_status_table">
                <thead>
                  <tr class="active">
                      <th>Patient</th>
                      <th>Rx Number</th>
                      <th>Medication Name</th>
					  <th>Written Qty</th>
					  <th>Remaining Qty</th>
					  <th>Last Dispense</th>
					  <th>Expiration</th>
					  <th>Prescriber Name</th>
                    </tr>
                </thead>
				<tbody>
					<t t-foreach="prescription_order_lines" t-as="line">
						<tr>
							<td>
								<span t-field="line.patient_id.name" />
							</td>
							<td>
								<span t-field="line.name" />
							</td>
							<td>
								<span t-field="line.medicament_id.display_name" />
							</td>
							<td>
								<span t-field="line.qty" />
							</td>
							<td>
								<span t-field="line.can_dispense_qty" />
							</td>
							<td>
								<span t-field="line.last_dispense_id.date_planned" />
							</td>
							<td>
								<span t-field="line.date_stop_treatment" />
							</td>
							<td>
								<span t-field="line.physician_id" />
							</td>
						</tr>
					</t>
				</tbody>
			</table>
		</t>
	</template>

</odoo>
