<odoo>

	<template id="prescription_lines" name="Prescription Lines">
		<h3 class="page-header">
			Prescriptions
		</h3>
        <t t-if="not patients">
            <p>There are currently no prescriptions associated with your account.</p>
        </t>
        <t t-if="patients">
            <table class="table table-hover o_my_status_table">
                <thead>
                  <tr class="active text-center">
                      <th>Patient</th>
                      <th>Rx Number</th>
                      <th>Medication Name</th>
					  <th>Written Qty</th>
					  <th>Remaining Qty</th>
					  <th>Last Dispense</th>
					  <th>Expiration</th>
					  <th>Prescriber Name</th>
					  <th>Refill</th>
                    </tr>
                </thead>
				<tbody>
					<t t-foreach="prescription_order_lines" t-as="line">
						<tr>
							<td>
								<span t-field="line.patient_id.name" />
							</td>
							<td>
								<span t-field="line.name" />
							</td>
							<td>
								<span t-field="line.medicament_id.display_name" />
							</td>
							<td>
								<span t-field="line.qty" />
							</td>
							<td>
								<span t-field="line.can_dispense_qty" />
							</td>
							<td>
								<span t-field="line.last_dispense_id.date_planned" />
							</td>
							<td>
								<span t-field="line.date_stop_treatment" />
							</td>
							<td>
								<span t-field="line.physician_id" />
							</td>
							<td>
								<t t-if="line.can_dispense_qty">
									
									<t t-set="product" t-value="line.medicament_id.product_id" />
									
									<form action="/shop/cart/update"
										  method="POST"
										  class="js_add_cart_variants"
										  t-att-data-attribute_value_ids="product.product_variant_ids.ids"
										  >
										<input type="hidden"
											   name="csrf_token"
											   t-att-value="request.csrf_token()"
											   />
										<div class="js_product">
											<input type="hidden" t-value="line.qty" />
										  <a id="add_to_cart"
											 class="btn btn-primary btn-xs mt8 js_check_product a-submit"
											 href="#">
												Add to Cart
										  </a>
										</div>
					  
									</form>
									
								</t>
							</td>
						</tr>
					</t>
				</tbody>
			</table>
		</t>
	</template>

</odoo>
